[Unit]
Description=Cloudflare Tunnel client
After=network.target

[Service]
Type=simple
ExecStart=/root/cfolder/cloudflared-linux-amd64 tunnel --url localhost: --edge-ip-version auto --no-autoupdate --protocol http2
WorkingDirectory=/root/cfolder
Restart=always
RestartSec=10
User=root
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
